@model OLLLibrarySystem.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "Lourdes Academy Library: Checkout";
}

<h2>Check out now</h2>
<p>Please enter your details, and when complete, see your teacher to pick up your items!</p>


@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <h3>Responsible Party</h3>
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

    <h3>Address</h3>

    foreach (var property in ViewData.ModelMetadata.Properties)
    {
        if (property.PropertyName != "Name")
        {
            <div class="form-group">
                <label>@(property.DisplayName ?? property.PropertyName)</label>
                @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
            </div>
        }
    }

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete checkout" />
    </div>
}
