@using OLLLibrarySystem.Domain.Entities
@model OLLLibrarySystem.WebUI.Models.BookListViewModel

@{
    ViewBag.Title = "Lourdes Academy Books";
}

@foreach (var p in Model.Book)
{
    @Html.Partial("BookSummary", p)
}

<div class="btn-group pull-right">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x,
    Genre = Model.CurrentGenre }))
</div>
